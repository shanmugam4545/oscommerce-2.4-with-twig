{% extends "product_base.html.twig" %}
{% block stylesheet %}
<link href="ext/jquery/prettyPhoto/css/prettyPhoto.css" rel="stylesheet" />
{% endblock %}
{% block head_javascript %}
<script src="ext/jquery/prettyPhoto/js/jquery.prettyPhoto.js"></script>
{% endblock %}
{% block gallery %}
{% if gallery_data != null %}
<div class="container-fluid span4 pull-right well gallery text-center">
<h4 class="">Gallery</h4>
{% for key in gallery_data %}
        <span><a href="{{ [constant('HTTP_SERVER'),constant('DIR_WS_HTTP_CATALOG'),constant('DIR_WS_IMAGES'),key.image]|join }}" title="{{ key.image }}" data-rel="prettyPhoto[gallery]">{{ image([constant('HTTP_SERVER'),constant('DIR_WS_HTTP_CATALOG'),constant('DIR_WS_IMAGES'),key.thumb]|join) | raw}}</a></span>
{% endfor %}
</div>
<script>
$(document).ready(function(){
$(".gallery a[data-rel^='prettyPhoto']").prettyPhoto({hook:'data-rel',allow_resize: true,animation_speed:'normal',theme:'pp_default',slideshow:3000, autoplay_slideshow: false,social_tools: false});
});</script>
{% endif %}
{% endblock %}
