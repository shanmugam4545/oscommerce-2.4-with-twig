{% extends "categories_base.html.twig" %}
{% block appcontent %}
<img class="img-polaroid image_categorie" src="{{ [constant('DIR_WS_IMAGES'), cat_image]|join }}" alt="{{ cat_name }}" />	
<h2 class="title">{{ cat_name }}</h2>
<hr>
{% set GridContentWidth = 9 %}
{% set row = 3 %}
{% block catright %}
<div class="span{{ GridContentWidth / row }} pull-right"><h2 class="text-center">test</h2></div>
{% endblock catright %}

<ul class="thumbnails row-fluid">
{% for i in data %}
<li class="span{{ GridContentWidth / row }}">
    <div class="thumbnail">
        <h5 class="text-center">{{ i['cat_name'] }}</h5>
         <div class="row-fluid">
             <img src="{{ [constant('DIR_WS_IMAGES'), i['cat_image'] ]|join }}" alt="{{ i['cat_name'] }}" />
         </div>
        <hr><p class="text-center"><a href="{{link(null, i['cat_link']) | raw }}" class="btn btn-info btn-mini"><i class="icon-play"></i> See our products</a></p> 
    </div>
</li>
{% if loop.index is divisibleby(row) %}
</ul><ul class="thumbnails row-fluid">
{% endif %}
{% endfor %}
</ul>
{% endblock %}