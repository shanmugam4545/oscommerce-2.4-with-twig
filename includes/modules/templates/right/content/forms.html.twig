{% macro inputlabelandwithicon(label, name, icon, placement, class, value, type, placeholder, includeshowpassword) %}
{# placement options : input-prepend, input-append #} 
<div class="control-group">
    
    <label class="control-label" for="{{ name }}">{{ label }}</label>
    
        <div class="controls">
            
            <div class="{{ placement }}">
                
                <span class="add-on"><i class="{{ icon }}"></i></span>
                
                <input id="{{ name }}" class="{{ class }}" type="{{ type|default('text') }}" name="{{ name }}" placeholder="{{ placeholder }}" value="{{ osc_output_string(value|e) }}" />
            
            {% if type == 'password' and includeshowpassword == 'true' %}   
            <span id="show{{ name }}" data-toggle="tooltip" data-original-title="{{ constant('CLICK_SHOW_PASSWORD') }}" class="add-on hidden"><i class="icon-fa-eye-open"></i></span>
            {% endif %}
            </div>
                
    </div>    
</div>
{% endmacro %}

