{% macro inputwithiconandpopover(name, icon, placement, class, value, type, placeholder, popovercontent, popovertitle) %}
<div class="{{ placement }}">
    
    <span class="add-on"><i class="{{ icon }}"></i></span>
    
    <input id="{{ name }}" class="{{ class }}" type="{{ type|default('text') }}" name="{{ name }}" placeholder="{{ placeholder }}" value="{{ osc_output_string(value|e) }}" data-content="{{ popovercontent }}" data-original-title="{{ popovertitle }}" />
    {% if type == 'password' %}    
    <span id="show{{name}}" data-toggle="tooltip" data-original-title="{{ constant('CLICK_SHOW_PASSWORD') }}" class="add-on hidden"><i class="icon-fa-eye-open"></i></span>
    {% endif %}
</div> 
<script>
$(function ()
{ $("#{{name}}").popover({trigger:'hover',placement:'top'});            
});
</script>
{% endmacro %}

