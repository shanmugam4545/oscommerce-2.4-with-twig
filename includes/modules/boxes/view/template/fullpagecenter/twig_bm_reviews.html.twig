{% if data|length > 0 %}
<li class="span3">
<h4 class="boxnavcat"><i class="icon-fa-comment"></i> {{ constant('MODULE_BOXES_REVIEWS_TITLE') }}</h4>   
{% for reviewsbox in data|slice(random(constant('MAX_RANDOM_SELECT_REVIEWS')),limit) %}
<div class="media well">
   {% if withphoto == true %}
   <a class="pull-left" href="{{ link('products', ['reviews=',reviewsbox['reviews_id'],'&id=',reviewsbox['products_id']]|join) | raw }}">
       <img class="media-object" src="{{ [constant('DIR_WS_IMAGES'),reviewsbox['products_image']]|join}}" alt="{{ reviewsbox['products_name'] }}" />
   </a>
   {% endif %}
        <div class="media-body">
            <h5 class="media-heading text-left" style="height:30px;">{{ reviewsbox['products_name'] }}</h5>
            <ul class="unstyled">
            <li>{{ constant(['TWIG_RATING_',reviewsbox['reviews_rating'] | round_rating]|join) | raw}}</li><br />
            <li><a class="btn btn-info btn-small pull-right" href="{{ link('products', ['reviews=',reviewsbox['reviews_id'],'&id=',reviewsbox['products_id']]|join) | raw }}">{{ constant('REVIEW_READ') }}</a></li>
           </ul> 
        </div>
</div>
{% endfor %}
</li>
{% endif %}