{% if data|length > 0 %}
<li class="nav-header">{{ constant('MODULE_BOXES_WHATS_NEW_TITLE') }}</li>     
<li>
<ul class="nav nav-list text-center">
{% for whatnew in data|slice(random(constant('MAX_RANDOM_SELECT_NEW') - loop.revindex), 1) %}                
<li><h5>{{ whatnew['products_name'] }}</h5></li>        
<li><a href="{{ link('products', ['id=',whatnew['products_id']]|join) | raw }}"><img src="{{ [constant('DIR_WS_IMAGES'),whatnew['products_image']]|join}}" alt="{{ whatnew['products_name'] }}" width="{{ constant('SMALL_IMAGE_WIDTH') }}" height="{{ constant('SMALL_IMAGE_HEIGHT') }}" /></a></li> 
{% if whatnew['specials_new_products_price'] != null %}        
<li class="muted"><del>{{ whatnew['products_price']|display_price(whatnew['products_tax_class_id']) }}</del></li>        
<li class="text-error"><strong>{{ whatnew['specials_new_products_price']|display_price(whatnew['products_tax_class_id']) }}</strong></li> 
{% else %}
<li><strong>{{ whatnew['products_price']|display_price(whatnew['products_tax_class_id']) }}</strong></li>      
{% endif %} 
{% endfor %}
</ul>
</li>
{% endif %}