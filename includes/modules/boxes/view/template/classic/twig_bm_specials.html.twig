{% if data|length > 0 %}
<div class="media">
    <span class="pull-left">
        <i class="icon-fa-money icon-large text-info"></i>
    </span>
    <div class="media-body">        
    <h4 class="media-heading text-info">{{ constant('MODULE_BOXES_SPECIALS_TITLE') }}</h4>     
        <ul class="nav nav-list">
{% for specials in data|slice(0, 1) %}        
        <li><h5>{{ specials['products_name'] }}</h5></li>
        <li class="text-center"><a href="{{ link('products', ['id=',specials['products_id']]|join) | raw }}"><img src="{{ [constant('DIR_WS_IMAGES'),specials['products_image']]|join}}" alt="{{ specials['products_name'] }}" width="{{ constant('SMALL_IMAGE_WIDTH') }}" height="{{ constant('SMALL_IMAGE_HEIGHT') }}" /></a></li> 
        <li class="text-center"><del>{{ specials['products_price']|display_price(specials['products_tax_class_id']) }}</del></li>
        <li class="text-center text-error">{{ specials['specials_new_products_price']|display_price(specials['products_tax_class_id']) }}</li>        
{% endfor %}             
       </ul>
   </div>
</div>
{% endif %}

